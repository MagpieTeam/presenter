<div class="col-sm-12 col-md-12">
  <div class="col-sm-4 col-md-4">
    <h4>Valgt logger: <%= @logger[:name] %></h4>
  </div>
  <%= if @current_user[:admin] do %>
    <div class="col-sm-1 col-md-1 col-sm-offset-5 col-md-offset-5">
      <button onclick="window.document.location='/loggers/<%= @logger[:id] %>/edit';" class="btn btn-default">Ret logger</button>
    </div>
    <div class="col-sm-1  col-sm-offset-1 col-md-1 col-md-offset-1">
      <form method="POST" action="/loggers/<%= @logger[:id] %>" onsubmit="return confirm('er du sikker på at du vil slette <%= @logger[:name] %> ?');">
      <input type="hidden" name="_method" value="DELETE">
      <input type="hidden" name="_csrf_token" value="<%= get_csrf_token %>">
      <button class="btn btn-default">Slet logger</button></form>
    </div>
  <% end %>
</div>
<div class="col-sm-12 col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading col-sm-12 col-md-12">
      <div class="col-sm-4 col-md-4">
        <h5>Tilgængelige sensore</h5>
      </div>
    </div>
    <table class="table table-striped table-hover table-condensed">
    	<thead>
    		<tr>
    			<th>SensorId</th>
    			<th>Navn</th>
    			<th>Måleenhed</th>
          <th>Batch</th>
          <th>Live</th>
    		</tr>
    	</thead>
    	<%= for s <- @sensors do %>
    	<tr>
        <td>
          <%= s[:id] %>
        </td>
        <td>
          <%= s[:name] %>
        </td>
        <td>
          <%= s[:unit_of_measure] %>
        </td>
        <td>
          <a href="/loggers/<%= @logger[:id] %>/sensors/<%= s[:id] %>/batch" class ="btn btn-default">BatchView</a>
        </td>
        <td>
          <a href= "/loggers/<%= @logger[:id] %>/sensors/<%= s[:id] %>/live" class ="btn btn-default">LiveView</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<script type="text/javascript">
  function delete_logger() {
    console.log("delete");
    $.ajax({
      url: "/loggers/<%= @logger[:id] %>",
      data: { _csrf_token: "<%= get_csrf_token %>"},  
      type: "DELETE"
    }).done(function(){
        console.log("finish");
        window.location.replace("/loggers");
    }).fail(function(){
        console.log("fail");
    });
  };
</script>