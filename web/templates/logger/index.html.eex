<div class="col-sm-12 col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading col-sm-12 col-md-12"> 
      <div class="col-sm-4 col-md-4">
        <h4>Tilg√¶ngelige loggere</h4>
      </div>
      <div class="text-right col-sm-2 col-md-2 col-sm-offset-6 col-md-offset-6">
        <a href="/loggers/new" class="btn btn-default">Opret logger</a>
      </div>
    </div>
    <table class="table table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th>LoggerID</th>
          <th>Navn</th>
          <th>Token</th>
        </tr>
      </thead>
      <%= for l <- @loggers do %>
        <tr onclick="window.document.location='/loggers/<%= l[:id] %>';">
          <td>
            <%= l[:id] %>
          </td>
          <td>
            <%= l[:name] %>
          </td>
          <td>
            <%= l[:password] %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>